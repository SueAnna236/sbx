/* 1：组件背景颜色 灰色 */
page{
  background-color: #f1f1f1;
}
/* 2：卡片 */

.card-title{
  font-size: 20px;
  margin-bottom: 20rpx;
}
.card-date{
  font-size: 14px;
  color: #ccc;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.card-image{
  width: 100%;
  height: 300rpx;
}
.card-desc{
  font-size: 16px;
  color: #333;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 20rpx 0;
}
.card-read{
  font-size: 14px;
  color: #666;
  padding-top: 20rpx;
}