/**index.wxss**/
/* 功能一：轮播图 */
.slider,.slider swiper,.slider image{
  height: 390rpx;
  width: 100%;
}
/* 功能二：九宫格 */
/* 父元素 */
.index-nav{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap; 
}
/* 子元素 */
.nav-item{
  width: 33.33%;
  height: 250rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  font-size: 14px;
  line-height: 20px;
}
.nav-item:nth-child(3n){
  border-right: 0 none;
}
/* 子元素中的图片 */
.index-nav .nav-item image{
  width: 102rpx;
  height: 102rpx;
}

/* 功能四：按钮 */
.index-enter{
  display: flex;
  padding: 20rpx 42rpx;
}
.enter-item{
  width: 50%;
  display: flex;
  justify-content: center;
}
.enter-item image{
  width: 320rpx;
  height: 178rpx;

}

